<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:layout_height="match_parent"
              tools:context=".MainActivity">

    <ProgressBar
            android:id="@+id/prbLoading"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/txvMnemonic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txvBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txvSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:hint="Enter address here"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:text="Send"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txvHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ProgressBar
            android:id="@+id/prbLoadingHash"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>